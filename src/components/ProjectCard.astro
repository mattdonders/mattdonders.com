---
import type { Project } from '../data/projects';
import { statusLabel, statusBadgeClass } from '../data/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;
const primaryLink = project.appStore || project.playStore || project.url || project.github;
---

<article class="project-card">
  <div class="card-header">
    <div class="card-title-row">
      <h3 class="card-title">{project.name}</h3>
      <span class:list={['badge', statusBadgeClass[project.status]]}>
        {statusLabel[project.status]}
      </span>
    </div>
    <p class="card-tagline">{project.tagline}</p>
  </div>

  <p class="card-description">{project.description}</p>

  <div class="card-footer">
    <div class="card-tags">
      {project.platforms.map(p => <span class="tag">{p}</span>)}
      {project.tags.map(t => <span class="tag">{t}</span>)}
    </div>

    {primaryLink && (
      <div class="card-links">
        {project.appStore && (
          <a href={project.appStore} class="card-link" target="_blank" rel="noopener noreferrer" title="App Store">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
          </a>
        )}
        {project.playStore && (
          <a href={project.playStore} class="card-link" target="_blank" rel="noopener noreferrer" title="Google Play">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
              <path d="M3.18 23.76c.3.17.65.19.97.08l11.53-6.66-2.45-2.45-10.05 9.03zM.5 1.12C.18 1.46 0 1.96 0 2.6v18.8c0 .64.18 1.14.51 1.48l.08.07L10.46 12 .58 1.05.5 1.12zM19.37 10.2L16.8 8.7 14.06 11.5l2.75 2.75 2.58-1.49c.74-.42.74-1.12-.02-1.56zM4.15.25L15.67 6.9l-2.45 2.45L3.18.32a1.16 1.16 0 01-.03-.07z"/>
            </svg>
          </a>
        )}
        {project.github && (
          <a href={project.github} class="card-link" target="_blank" rel="noopener noreferrer" title="GitHub">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
            </svg>
          </a>
        )}
        {project.url && !project.appStore && !project.playStore && !project.github && (
          <a href={project.url} class="card-link" target="_blank" rel="noopener noreferrer" title="Website">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6"/>
              <polyline points="15 3 21 3 21 9"/>
              <line x1="10" y1="14" x2="21" y2="3"/>
            </svg>
          </a>
        )}
      </div>
    )}
  </div>
</article>

<style>
  .project-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: border-color 0.15s ease, transform 0.15s ease;
  }

  .project-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .card-header {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .card-title-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .card-title {
    font-size: 1.05rem;
    font-weight: 600;
    color: var(--text);
  }

  .card-tagline {
    font-size: 0.85rem;
    color: var(--text-muted);
    font-style: italic;
    margin: 0;
  }

  .card-description {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.6;
    flex: 1;
    margin: 0;
  }

  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .card-links {
    display: flex;
    gap: 0.5rem;
  }

  .card-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 6px;
    background: var(--surface-hover);
    border: 1px solid var(--border);
    color: var(--text-muted);
    transition: all 0.15s ease;
  }

  .card-link:hover {
    color: var(--accent);
    border-color: var(--accent);
    background: var(--accent-dim);
  }
</style>
