---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  canonicalURL?: string;
  ogImage?: string;
}

const {
  title,
  description = 'Matt Donders — Software developer building iOS apps, Cloudflare Workers, and other things.',
  canonicalURL = Astro.url.href,
  ogImage = '/og-default.png',
} = Astro.props;

const siteTitle = title === 'Matt Donders' ? title : `${title} — Matt Donders`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph -->
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Matt Donders" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content="@mattdonders" />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={description} />

    <title>{siteTitle}</title>
  </head>
  <body>
    <div class="page-wrapper">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  .page-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
  }
</style>
